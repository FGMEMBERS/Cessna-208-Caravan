<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>wheels.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>sousnez</object-name>
    <object-name>axes</object-name>

    <object-name>axeAH</object-name>
    <object-name>axeAB</object-name>
    <object-name>articuleAH</object-name>
    <object-name>articuleAB</object-name>
    <object-name>roueA</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>

    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>material</type>
    <object-name>sousnez</object-name>
    <object-name>axes</object-name>

    <object-name>axeAH</object-name>
    <object-name>axeAB</object-name>
    <object-name>articuleAH</object-name>
    <object-name>articuleAB</object-name>
    <object-name>roueA</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>


    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <effect>
    <inherits-from>Aircraft/Generic/Effects/Fuselagereflect</inherits-from>
    <object-name>sousnez</object-name>
    <object-name>axes</object-name>
  </effect>

  <!-- Effets sur le sol -->
  <!-- Roue avant -->
  <model>
    <path>Aircraft/Cessna-208-Caravan/Models/Effects/ground/ground0.xml</path>
    <offsets>
      <x-m> -5.234 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.361 </z-m>
    </offsets>
  </model>

  <!-- Roue gauche -->
  <model>
    <path>Aircraft/Cessna-208-Caravan/Models/Effects/ground/ground1.xml</path>
    <offsets>
      <x-m> -1.248 </x-m>
      <y-m> -1.784 </y-m>
      <z-m> -1.381 </z-m>
    </offsets>
  </model>

  <!-- Roue de droite -->
  <model>
    <path>Aircraft/Cessna-208-Caravan/Models/Effects/ground/ground2.xml</path>   
    <offsets>
      <x-m> -1.248 </x-m>
      <y-m>  1.784 </y-m>
      <z-m> -1.381 </z-m>
    </offsets>
  </model>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -5.234 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.094 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.248 </x-m>
      <y-m> -1.784 </y-m>
      <z-m> -1.068 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.248 </x-m>
      <y-m>  1.784 </y-m>
      <z-m> -1.068 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

